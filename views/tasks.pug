doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title Tasks Manager
    link(rel="stylesheet", href="bower_components/bootstrap/dist/css/bootstrap.min.css")

  body
    .container
      form(action='/tasks', method='POST')
        .form-group
          label Title
          |
          input.form-control(type='text', name='title', placeholder='Input task title')
        |
        input.btn.btn-primary(type='submit', value='Submit')
      .row
        .col-md-6
          h2 Pending Tasks
          ul
            each task in tasks
              if !task.done
                li
                  p Title: #{task.title}
                  p Done: #{task.done}
                  p created at: #{task.createdAt}
                  a.btn.btn-default.remove(href="/task/" + task._id) remove
                  a.btn.btn-default.edit(href='#') edit
                  form.hidden.edit-task(action="/task/" + task._id, method='POST')
                    .form-group
                      label Title
                      |
                      input.form-control(type='text', name='title', value=task.title)
                      input(type='checkbox', name='done')
                      | done
                    |
                    input.btn.btn-primary(type='submit', value='Submit')
        .col-md-6
          h2 Completed Tasks
          ul
            each task in tasks
              if task.done
                li
                  p Title: #{task.title}
                  p Done: #{task.done}
                  p created at: #{task.createdAt}
                  a.btn.btn-default.remove(href="/task/" + task._id) remove
                  a.btn.btn-default.edit(href='#') edit
                  form.hidden.edit-task(action="/task/" + task._id, method='POST')
                    .form-group
                      label Title
                      |
                      input.form-control(type='text', name='title', value=task.title)
                      input(type='checkbox', name='done')
                    |
                    input.btn.btn-primary(type='submit', value='Submit')

    script(src="/bower_components/jquery/dist/jquery.min.js")
    script(src="/bower_components/bootstrap/dist/js/bootstrap.min.js")
    script(src="/js/main.js")

